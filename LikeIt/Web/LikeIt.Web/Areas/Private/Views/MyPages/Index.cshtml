@using LikeIt.Web.ViewModels
@using PagedList.Mvc;
@model PagedList.IPagedList<LikeIt.Web.ViewModels.Page.ListPagesViewModel>

@section styles {
    @Styles.Render("~/Content/pagedlist")
}

@{
    ViewBag.Title = "My Pages";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="pull-right">
            @Html.DisplayFor(b => b, "CreatePageButton")
        </div>
        <h4>Added by Me</h4>
        @Html.ActionLink("Liked By Me", "Index", "MyLikes", new { }, new { @class = "" }) |
        @Html.ActionLink("Disliked By Me", "Index", "MyDislikes", new { }, new { @class = "" })
        <div>
            <div class="row">
                @Html.Partial("~/Views/Shared/_SearchPartial.cshtml")
            </div>
            <div class="row">
                @{
                    Html.RenderAction("GetCategoriesPartial");
                }
            </div>
        </div>
        <div class="row text-center" id="all-pages">
            @Html.Partial("_PagesListPartial", Model)
            @Html.Partial("_PagingPartial", Model)
        </div>
    </div>
</div>

@section footer {
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Liked By Me", "Index", "MyLikes", new { }, new { @class = "" }) |
            @Html.ActionLink("Disliked By Me", "Index", "MyDislikes", new { }, new { @class = "" })
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/jqueryval")
}