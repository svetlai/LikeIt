@using (Html.BeginForm("Index", null, FormMethod.Get))
{
    <div class="form-group">
        @Html.LabelFor(m => m, "Search", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-4">
            @Html.EditorFor(m => m, "SearchInput")
            @*@Html.ValidationMessageFor(m => m, "Enter at least two symbols.", new { @class = "text-danger" })*@
        </div>
        <div class="col-md-2">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
}
