@using LikeIt.Web.ViewModels
@model IEnumerable<LikeIt.Web.ViewModels.Home.IndexPagesViewModel>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Trending Dislikes</h3>
    </div>
    <div class="panel-body">
        @foreach (var page in Model)
        {
            <div class="thumbnail" style="background-image: url('@(page.Image != null ? @Url.Action("Image", "Page", new { id = page.Image.Id }) : Url.Content("~/Images/default.png"))')">
                <a href="~/Page/Details/@page.Id">
                    <div class="row">
                        <div class="col-md-7">
                            <h1>@page.Name</h1>
                            <h4>@page.CategoryName</h4>
                        </div>
                        <div class="col-md-5 votes-container">
                            @{Html.RenderAction("GetVotesPartial", "Page", new { id = page.Id });}
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

