@model LikeIt.Web.ViewModels.VotesViewModel
<div id="page-rating">
    <div class="row">
        <div class="col-md-12 text-center">
            @Html.DisplayFor(m => m.Rating, "PageRating")
            @if (!Request.IsAuthenticated)
            {
                <div class="unauthenticated glyphicon glyphicon-thumbs-up"></div>
            }
        </div>
    </div>
@if (Request.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-12 text-center">
            @Ajax.ActionLink(" ", "Like", "Votes", new { id = Model.PageId },
            new AjaxOptions
           {
               HttpMethod = "POST",
               InsertionMode = InsertionMode.Replace,
               UpdateTargetId = "page-rating"
           }, new { @class = "glyphicon glyphicon-thumbs-up pull-left" })
            @Ajax.ActionLink(" ", "Dislike", "Votes", new { id = Model.PageId },
            new AjaxOptions
           {
               HttpMethod = "POST",
               InsertionMode = InsertionMode.Replace,
               UpdateTargetId = "page-rating"
           }, new { @class = "glyphicon glyphicon-thumbs-down pull-right" })
        </div>
    </div>
    @Html.DisplayFor(m => m.LikesCount, "LikesCount")
    @Html.DisplayFor(m => m.DislikesCount, "DislikesCount")
}
</div>

